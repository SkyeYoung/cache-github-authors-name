{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "../lib",
    "declarationDir": "../lib/types",
    "declarationMap": false
  },
  "exclude": [
    "../node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
